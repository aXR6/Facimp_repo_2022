#Automatizador de update, instalação de update, remoção de programas desnecessarios, limpeza de arquivos de update
apt update
apt dist-upgrade -y
apt autoremove -y
apt autoclean

#Instalação de programas
apt install git -y

#Descobrindo drivers (listando)
lspci

#Instalação de drivers
apt install firmware-realtek firmware-intel-microcode -y